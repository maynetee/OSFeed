# =============================================================================
# OSFeed Environment Variables
# Copy this file to .env and fill in the values
# =============================================================================

# --- Email Configuration ---
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp          # "smtp" or "resend"
EMAIL_FROM_ADDRESS=noreply@osfeed.app
EMAIL_FROM_NAME=OSFeed

# SMTP Settings (when EMAIL_PROVIDER=smtp)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Resend Settings (when EMAIL_PROVIDER=resend)
RESEND_API_KEY=

# Token Expiry
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# --- Authentication ---
SECRET_KEY=               # Leave blank to auto-generate (set in production!)
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Application ---
FRONTEND_URL=http://localhost:5173
APP_DEBUG=false

# --- Database (PostgreSQL) ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=osfeed_db
POSTGRES_USER=osfeed_user
POSTGRES_PASSWORD=

# SQLite fallback (local dev)
USE_SQLITE=false

# --- API Keys ---
OPENAI_API_KEY=
OPENROUTER_API_KEY=
GEMINI_API_KEY=

# --- Qdrant ---
QDRANT_URL=
QDRANT_API_KEY=

# --- Redis ---
REDIS_URL=

# --- Telegram ---
TELEGRAM_API_ID=0
TELEGRAM_API_HASH=
TELEGRAM_PHONE=
