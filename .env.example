# =============================================================================
# OSFeed Environment Variables
# Copy this file to .env and fill in the values
# =============================================================================

# --- Email Configuration ---
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp          # "smtp" or "resend"
EMAIL_FROM_ADDRESS=noreply@osfeed.app
EMAIL_FROM_NAME=OSFeed

# SMTP Settings (when EMAIL_PROVIDER=smtp)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Resend Settings (when EMAIL_PROVIDER=resend)
RESEND_API_KEY=

# Token Expiry
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# --- Authentication ---
# REQUIRED: Generate a secure key with: openssl rand -hex 32
SECRET_KEY=
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Cookie-based Authentication (httpOnly cookies for XSS protection)
COOKIE_SECURE=false          # Set to true in production (requires HTTPS)
COOKIE_SAMESITE=lax          # CSRF protection (lax, strict, or none)
COOKIE_DOMAIN=               # Optional: specific domain for cookies

# --- Application ---
APP_ENV=development          # "development" or "production" (controls security features)
FRONTEND_URL=http://localhost:5173
APP_DEBUG=false

# --- Database (PostgreSQL) ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=osfeed_db
POSTGRES_USER=osfeed_user
POSTGRES_PASSWORD=

# SQLite fallback (local dev)
USE_SQLITE=false

# --- API Keys ---
OPENAI_API_KEY=
OPENROUTER_API_KEY=
GEMINI_API_KEY=

# --- Redis ---
REDIS_URL=

# --- Telegram ---
TELEGRAM_API_ID=0
TELEGRAM_API_HASH=
TELEGRAM_PHONE=
