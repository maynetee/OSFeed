# =============================================================================
# OSFeed Environment Configuration
# =============================================================================
# This file documents all available environment variables.
# Set these in your deployment platform (e.g. Coolify, Docker, etc.)
# or in a local .env file at the project root for local development.

# =============================================================================
# Email Configuration
# =============================================================================
# Enable/disable email functionality (app works without email when disabled)
EMAIL_ENABLED=false

# Email provider: "smtp" or "resend"
EMAIL_PROVIDER=smtp

# Sender address and display name
EMAIL_FROM_ADDRESS=noreply@osfeed.app
EMAIL_FROM_NAME=OSFeed

# --- SMTP Settings (when EMAIL_PROVIDER=smtp) ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# --- Resend Settings (when EMAIL_PROVIDER=resend) ---
RESEND_API_KEY=

# =============================================================================
# Token Expiry Settings
# =============================================================================
# Password reset token lifetime in minutes
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30

# Email verification token lifetime in hours
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# =============================================================================
# Application
# =============================================================================
APP_DEBUG=false
PREFERRED_LANGUAGE=en
SUMMARY_TIME=08:00
FRONTEND_URL=http://localhost:5173

# =============================================================================
# Authentication - JWT
# =============================================================================
# SECRET_KEY=  # Auto-generated if not set
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Cookie-based Authentication (httpOnly cookies for XSS protection)
COOKIE_SECURE=false          # Set to true in production (requires HTTPS)
COOKIE_SAMESITE=lax          # CSRF protection (lax, strict, or none)
COOKIE_DOMAIN=               # Optional: specific domain for cookies

# =============================================================================
# OpenRouter API (optional - free LLM fallback)
# =============================================================================
OPENROUTER_API_KEY=
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free

# =============================================================================
# OpenAI API (Translations & Embeddings)
# =============================================================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# Gemini API (cost-effective translation)
# =============================================================================
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=osfeed_db
POSTGRES_USER=osfeed_user
POSTGRES_PASSWORD=

# Legacy SQLite (set USE_SQLITE=true for local dev without PostgreSQL)
USE_SQLITE=false

# =============================================================================
# Redis Cache
# =============================================================================
REDIS_URL=

# =============================================================================
# Telegram API (User Account)
# =============================================================================
TELEGRAM_API_ID=0
TELEGRAM_API_HASH=
TELEGRAM_PHONE=
TELEGRAM_SESSION_STRING=
